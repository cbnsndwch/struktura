{
    "$schema": "https://turborepo.org/schema.json",
    "globalEnv": [
        "PORT", 
        "NODE_ENV", 
        "DATABASE_URL", 
        "GRAPHQL_PLAYGROUND", 
        "GRAPHQL_INTROSPECTION",
        "CI",
        "GITHUB_ACTIONS"
    ],
    "ui": "stream",
    "tasks": {
        "clean": {
            "dependsOn": ["^clean"],
            "outputs": ["dist/**", "lib/**", "build/**"],
            "cache": false
        },
        "build": {
            "dependsOn": ["^build"],
            "inputs": [
                "src/**",
                "package.json",
                "tsconfig.json",
                "tsup.config.ts",
                "nest-cli.json"
            ],
            "outputs": ["dist/**", "lib/**", "build/**"],
            "env": ["NODE_ENV"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "start": {
            "cache": false,
            "persistent": true
        },
        "lint": {
            "dependsOn": ["^build"],
            "inputs": [
                "src/**",
                "*.js",
                "*.ts",
                "*.tsx",
                "*.json",
                "eslint.config.js",
                ".eslintrc*"
            ],
            "outputs": []
        },
        "lint:fix": {
            "dependsOn": ["^build"],
            "inputs": [
                "src/**",
                "*.js",
                "*.ts",
                "*.tsx", 
                "*.json",
                "eslint.config.js",
                ".eslintrc*"
            ],
            "outputs": [],
            "cache": false
        },
        "format": {
            "inputs": [
                "src/**",
                "*.js",
                "*.ts",
                "*.tsx",
                "*.json",
                "*.md",
                ".prettierrc*",
                "prettier.config.*"
            ],
            "outputs": [],
            "cache": false
        },
        "test": {
            "dependsOn": ["^build"],
            "inputs": [
                "src/**",
                "test/**",
                "tests/**",
                "**/*.test.*",
                "**/*.spec.*",
                "vitest.config.*",
                "jest.config.*"
            ],
            "outputs": ["coverage/**"],
            "env": ["NODE_ENV"]
        },
        "test:watch": {
            "cache": false,
            "persistent": true
        },
        "test:e2e": {
            "dependsOn": ["^build"],
            "inputs": [
                "src/**",
                "test/**", 
                "e2e/**",
                "**/*.e2e.*",
                "vitest.e2e.config.*"
            ],
            "outputs": ["coverage/**"],
            "env": ["NODE_ENV", "DATABASE_URL"]
        }
    }
}

{
    "$schema": "https://turborepo.org/schema.json",
    "globalEnv": ["PORT", "NODE_ENV", "DATABASE_URL", "GRAPHQL_PLAYGROUND", "GRAPHQL_INTROSPECTION"],
    "ui": "stream",
    "tasks": {
        "clean": {
            "dependsOn": ["^clean"],
            "outputs": ["dist/**", "lib/**", "build/**"]
        },
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", "lib/**", "build/**"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "start": {
            "cache": false,
            "persistent": true
        },
        "lint": {
            "dependsOn": ["^lint"],
            "outputs": []
        },
        "format": {
            "dependsOn": ["^format"],
            "outputs": []
        },
        "test": {
            "dependsOn": ["^test"],
            "outputs": ["coverage/**"]
        }
    }
}

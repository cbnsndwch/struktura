{
    "name": "@cbnsndwch/struktura-main",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "description": "Main Struktura application - unified NestJS backend with React Router 7 admin UI",
    "scripts": {
        "build": "nest build",
        "dev": "nest start --watch",
        "start": "nest start",
        "start:prod": "node dist/main.js",
        "lint": "eslint . --fix",
        "format": "prettier --write .",
        "test": "vitest --run --passWithNoTests",
        "test:watch": "vitest",
        "test:e2e": "vitest --config vitest.e2e.config.ts"
    },
    "dependencies": {
        "@cbnsndwch/struktura-shared-contracts": "workspace:*",
        "@cbnsndwch/struktura-shared-domain": "workspace:*",
        "@cbnsndwch/struktura-shared-ui": "workspace:*",
        "@nestjs/apollo": "^13.1.0",
        "@nestjs/common": "^11.1.6",
        "@nestjs/core": "^11.1.6",
        "@nestjs/graphql": "^13.1.0",
        "@nestjs/mongoose": "^11.0.3",
        "@nestjs/platform-express": "^11.1.6",
        "@nestjs/serve-static": "^5.0.3",
        "apollo-server-express": "^3.13.0",
        "express": "^5.1.0",
        "graphql": "^16.11.0",
        "mongoose": "^8.18.2",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.2"
    },
    "devDependencies": {
        "@cbnsndwch/struktura-eslint-config": "workspace:*",
        "@cbnsndwch/struktura-tsconfig": "workspace:*",
        "@nestjs/cli": "^11.0.10",
        "@nestjs/schematics": "^11.0.7",
        "@nestjs/testing": "^11.1.6",
        "@types/express": "^5.0.3",
        "@types/node": "^22.0.0",
        "eslint": "^9.36.0",
        "prettier": "^3.6.2",
        "typescript": "^5.9.2",
        "vitest": "^3.2.4"
    },
    "engines": {
        "node": ">=22"
    }
}
